# ln -sf ${path}/bin/irb ${installation_path}/bin/irb
# ln -sf ${path}/bin/rake ${installation_path}/bin/rake
# ln -sf ${path}/bin/rdoc ${installation_path}/bin/rdoc
# ln -sf ${path}/bin/ri ${installation_path}/bin/ri
# ln -sf ${path}/bin/ruby ${installation_path}/bin/ruby
# gem update --system

# echo '================== sass =================='
# gem install sass
# ln -sf ${path}/bin/sass ${installation_path}/bin/sass
# ln -sf ${path}/bin/sass-convert ${installation_path}/bin/sass-convert
# ln -sf ${path}/bin/scss ${installation_path}/bin/scss
# ln -sf ${path}/bin/update_rubygems ${installation_path}/bin/update_rubygems

