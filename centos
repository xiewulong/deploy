path="${installation_path}/passenger"
installer ${name} ${tar} https://github.com/phusion/passenger/archive/${tar} ${path}
passenger_nginx_addon_dir=$($path/bin/passenger-config --nginx-addon-dir)
# ln -sf ${path}/bin/passenger ${installation_path}/bin/passenger
